        <com.appsamurai.storyly.StorylyView
            android:id="@+id/storyly_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>